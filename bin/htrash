#L:
#h: Usage: $0 FILES...
#h:
#h: -v : Show configuration.
#h: -l : List saved files.
#::
#a: [UTIL] A simple file trash can for shell.
. hutil
htrash() {
    ## Parse command line arguments.
    local OPTIND optopt= ops=
    while getopts "vl" optopt;do # OPTARG
        local ops="${ops}${optopt}"
        case $optopt in
            \?) return 1;;
        esac
    done
    shift $(( $OPTIND - 1 ))
    ## Show variables.
    case "${ops}" in *v*) htrash_show_variables;; esac
    ## Save files.
    htrash_save "$@"
}
htrash_show_variables() {
    echo "HTRASH_DIR : ${HTRASH_DIR}"
}
htrash_calc_variables() {
    HTRASH_DIR="${HOME}/.TRASH"
}
## -----------------------------------------------------------------------------
htrash_save() {
    local arg=
    for fr in "$@";do
        local to="${HTRASH_DIR}/`date '+%Y-%m-%d'`-`basename "${fr}"`"
        hutil info ".-- ${fr}"
        hutil info "'-> ${to}"
        if hutil yn "Save?" y;then
            mkdir -p "${HTRASH_DIR}"
            mv "${fr}" "${to}"
        fi
    done
}



## -----------------------------------------------------------------------------
htrash_calc_variables
if test @"`basename "$0"`" = @"htrash";then
    if test -n "$1";then
        htrash "$@"
    else
        hutil help
    fi
fi
