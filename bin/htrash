#r: ## HTRASH
#r:
#h: Usage: $0 FILES...
#h:
#h: -v : Show configuration.
#h: -l : List saved files.
#r:
htrash() {
    ## Parse command line arguments.
    local OPTIND optopt= ops=
    while getopts "vl" optopt;do # OPTARG
        local ops="${ops}${optopt}"
        case $optopt in
            \?) return 1;;
        esac
    done
    shift $(( $OPTIND - 1 ))
    ## Show variables.
    case "${ops}" in *v*) htrash_show_variables;; esac
    ## Save files.
    htrash_save "$@"
}
htrash_show_variables() {
    echo "HTRASH_DIR : ${HTRASH_DIR}"
}
htrash_calc_variables() {
    HTRASH_DIR="${HOME}/.TRASH"
}
## -----------------------------------------------------------------------------
htrash_save() {
    local arg=
    for fr in "$@";do
        local to="${HTRASH_DIR}/`date '+%Y-%m-%d'`-`basename "${fr}"`"
        echo "${LOGNAME}: .-- ${fr}" >&2
        echo "${LOGNAME}: '-> ${to}" >&2
        mkdir -p "${HTRASH_DIR}"
        mv "${fr}" "${to}"
    done
}



## -----------------------------------------------------------------------------
htrash_calc_variables
LOGNAME="`basename "$0"`"
if test @"${LOGNAME}" = @"htrash";then
    if test -n "$1";then
        htrash "$@"
    else
        sed -n 's/^ *#h: \{0,1\}//p' "$0" | sed "s|\\\$0|`basename $0`|g"
        echo ""
        sed -n 's/^ *#l: \{0,2\}//p' "$0"
    fi
fi
